rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /articles/{articleId} {
      // Reglas de desarrollo: abiertas (no usar en producción)
      allow read, write: if true;
      
      // Producción sugerida (comentada):
      // allow read: if true;
      // allow create, update, delete: if request.auth != null
      //   && request.resource.data.thumbnailURL.matches('^media/articles/[^/]+\\.\\w+$');
    }

    // Perfil de usuario (documento del usuario)
    match /users/{userId} {
      // Lectura abierta (nombre público). Escritura solo el dueño autenticado
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Favoritos por usuario
    match /users/{userId}/favorites/{favoriteId} {
      // Solo el usuario autenticado dueño del documento puede leer/escribir sus favoritos
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}